<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_service"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_hair"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Corte de cabelo"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/image_service"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/describe_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Em um resumo,\ndescreva seu serviÃ§o..."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/name_service"
        app:layout_constraintStart_toEndOf="@id/image_service"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/price_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$ 20,00"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/describe_service"
        app:layout_constraintStart_toEndOf="@id/image_service"/>




</androidx.constraintlayout.widget.ConstraintLayout>